//@version=4
strategy("Custom Keltner Channel Strategy With Alerts", 
          overlay=true,
          process_orders_on_close=true,
          calc_on_every_tick=true,
          initial_capital=5000,
          default_qty_type=strategy.percent_of_equity,
          default_qty_value=70,
          commission_type=strategy.commission.percent,
          commission_value=0.25)

startDate = input(title="Start Date", type=input.integer,
     defval=1, minval=1, maxval=31)
startMonth = input(title="Start Month", type=input.integer,
     defval=1, minval=1, maxval=12)
startYear = input(title="Start Year", type=input.integer,
     defval=2019, minval=1900, maxval=2100)
     
endDate = input(title="End Date", type=input.integer,
     defval=31, minval=1, maxval=31)
endMonth = input(title="End Month", type=input.integer,
     defval=12, minval=1, maxval=12)
endYear = input(title="End Year", type=input.integer,
     defval=2020, minval=1900, maxval=2100)

inDateRange = (time >= timestamp(syminfo.timezone, startYear,
         startMonth, startDate, 0, 0)) and
     (time < timestamp(syminfo.timezone, endYear, endMonth, endDate, 0, 0))
     


get_renko() =>
    float renko_barsize = 0.0
    
    if (syminfo.ticker == "ADAUSDTPERP" or syminfo.ticker == "BTCUSDTPERP" or syminfo.ticker == "ETHUSDTPERP" or syminfo.ticker == "LINKUSDTPERP" or syminfo.ticker == "LTCUSDTPERP" or syminfo.ticker == "XRPUSDTPERP" or syminfo.ticker == "XTZUSDTPERP")

        if(syminfo.ticker == "ADAUSDTPERP")
            renko_barsize := 0.00025
        else if(syminfo.ticker == "BTCUSDTPERP")
            renko_barsize := 31
        else if(syminfo.ticker == "EOSUSDTPERP")
            renko_barsize := 0.014
        else if(syminfo.ticker == "ETHUSDTPERP")
            renko_barsize := 0.98
        else if(syminfo.ticker == "LINKUSDTPERP")
            renko_barsize := 0.0305
        else if(syminfo.ticker == "LTCUSDTPERP")
            renko_barsize := 0.11        
        else if(syminfo.ticker == "XRPUSDTPERP")
            renko_barsize := 0.0013
        else if(syminfo.ticker == "XTZUSDTPERP")
            renko_barsize := 0.0099
    
        renko_barsize
    else if (syminfo.ticker == "ADAUSDT" or syminfo.ticker == "BTCUSDT" or syminfo.ticker == "ETHUSDT" or syminfo.ticker == "LINKUSDT" or syminfo.ticker == "LTCUSDT" or syminfo.ticker == "XRPUSDT" or syminfo.ticker == "XTZUSDT")

        if(syminfo.ticker == "ADAUSDT")
            renko_barsize := 0.00025
        else if(syminfo.ticker == "BTCUSDT")
            renko_barsize := 31
        else if(syminfo.ticker == "EOSUSDT")
            renko_barsize := 0.014
        else if(syminfo.ticker == "ETHUSDT")
            renko_barsize := 0.98
        else if(syminfo.ticker == "LINKUSDT")
            renko_barsize := 0.0305
        else if(syminfo.ticker == "LTCUSDT")
            renko_barsize := 0.11        
        else if(syminfo.ticker == "XRPUSDT")
            renko_barsize := 0.0013
        else if(syminfo.ticker == "XTZUSDT")
            renko_barsize := 0.0099
        
        renko_barsize

renko_bar = renko(symbol=syminfo.tickerid, style="Traditional", param=get_renko())
renko_high = security(renko_bar, "1", high)
renko_low = security(renko_bar, "1", low)
renko_close = security(renko_bar, "1", close)

//plot(renko_high, title="Renko High")
//plot(renko_low, title="Renko Low")
//plot(renko_close, title="Renko Close")

upper_source = renko_close
lower_source = renko_close

useTrueRange = input(false)
length = input(5, minval=1)
mult = input(1.0)

upperma = sma(upper_source, length)
lowerma = sma(lower_source,length)
range = useTrueRange ? tr : high - low
rangema = sma(range, length)
upper = upperma + rangema * mult
lower = lowerma - rangema * mult

p1 = plot(upper,title="Upper Keltner",linewidth=3)
p2 = plot(lower,title="Lower Keltner",linewidth=3)
fill(p1,p2,transp=75, color=color.yellow)

crossUpper = crossover(renko_close, upper)
crossLower = crossunder(renko_close, lower)

bprice = 0.0
bprice := crossUpper ? renko_high+syminfo.mintick : nz(bprice[1]) //should be renko_close? What is renko high is a long wick? Where in the script are we defining "if crossUpper is greater than most renko close?"

sprice = 0.0
sprice := crossLower ? renko_low -syminfo.mintick : nz(sprice[1]) // should be renko_close? what if renko low is a long wick but bar closed much higher than that?

crossBcond = false
crossBcond := crossUpper ? true 
 : na(crossBcond[1]) ? false : crossBcond[1]

crossScond = false
crossScond := crossLower ? true 
 : na(crossScond[1]) ? false : crossScond[1]

cancelBcond = crossBcond and (renko_close < lowerma or renko_high >= bprice )
cancelScond = crossScond and (renko_close > upperma or renko_low <= sprice )

syntax_ticker() =>
    string ticker = ""

    if(syminfo.ticker == "ADAUSDTPERP")
        ticker := "ADAUSDT"
    else if(syminfo.ticker == "BTCUSDTPERP")
        ticker := "BTCUSDT"
    else if(syminfo.ticker == "EOSUSDTPERP")
        ticker := "EOSUSDT"
    else if(syminfo.ticker == "ETHUSDTPERP")
        ticker := "ETHUSDT"
    else if(syminfo.ticker == "LINKUSDTPERP")
        ticker := "LINKUSDT"
    else if(syminfo.ticker == "XRPUSDTPERP")
        ticker := "XRPUSDT"
    else if(syminfo.ticker == "XTZUSDTPERP")
        ticker := "XTZUSDT"
    else
        ticker := syminfo.ticker
    
    ticker

if (cancelBcond)
    strategy.cancel("KltChLE")

if (crossUpper and inDateRange )
    strategy.entry("KltChLE", strategy.long, stop=bprice, comment="a=* b=short c=position q=100% e=binancefutures s=" + syntax_ticker() + " t=market | delay=1 | a=* b=buy e=binancefutures l=1 q=10% y=equity s=" + syntax_ticker() + " t=market")

if (cancelScond)
    strategy.cancel("KltChSE")

if (crossLower and inDateRange )
    strategy.entry("KltChSE", strategy.short, stop=sprice, comment="a=* b=long c=position q=100% e=binancefutures s=" + syntax_ticker() + " t=market | delay=1 | a=* b=sell e=binancefutures l=1 q=10% y=equity s=" + syntax_ticker() + " t=market")

